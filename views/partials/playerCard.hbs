<!--Este es un partial-->
<style>
    .card img {
        height: 200px;
        object-fit: cover;
    }
</style>
<div class="col-md-4">
    <div class="card">
        <img
            class="card-img-top"
            src={{this.photo}}
            alt=""
        />
        <div class="card-body">
            <h5 class="card-title">{{this.name}} {{this.lastName}}</h5>
            <p class="card-text">{{this.team}}</p>
            <h5>
                <div class="row">
                    <div class="col-md-6">
                        <p>Year</p>
                    </div>
                    <div class="col-md-6">
                        <p>Average</p>
                    </div>
                    {{#each average}}
                        <div class="col-md-6">
                            <p>{{year}}</p>
                        </div>
                        <div class="col-md-6">
                            <p>{{points}}</p>
                        </div>
                    {{/each}}
                </div>
            </h5>
        </div>
    </div>
</div>